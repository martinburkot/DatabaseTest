<?xml version="1.0" encoding="utf-8"?>
<com.example.medwed.databasetest.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox android:id="@+id/checkbox_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false">
    </CheckBox>

    <TextView
        android:id="@+id/list_name"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </TextView>

    <TextView
        android:id="@+id/list_surname"
        android:textSize="20dp"
        android:layout_marginLeft = "15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </TextView>


</com.example.medwed.databasetest.CheckableLinearLayout>